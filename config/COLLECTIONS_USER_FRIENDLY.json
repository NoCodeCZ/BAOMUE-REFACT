{
  "collections": {
    "pages": {
      "collection": "pages",
      "meta": {
        "collection": "pages",
        "icon": "article",
        "note": "Manage all pages on your website. Each page can contain multiple content blocks that you can arrange and customize.",
        "display_template": "{{title}} ({{status}})",
        "singleton": false,
        "archive_app_filter": true,
        "archive_field": "status",
        "archive_value": "archived",
        "unarchive_value": "published"
      },
      "fields": [
        {
          "field": "id",
          "type": "integer",
          "meta": {
            "special": ["id"],
            "interface": "input",
            "readonly": true,
            "hidden": true
          },
          "schema": {
            "is_primary_key": true,
            "has_auto_increment": true
          }
        },
        {
          "field": "title",
          "type": "string",
          "meta": {
            "interface": "input",
            "required": true,
            "width": "full",
            "note": "The page title that appears in the browser tab and search results. Make it descriptive and clear.",
            "translations": [
              {
                "language": "en-US",
                "translation": "Page Title"
              }
            ]
          },
          "schema": {
            "is_nullable": false
          }
        },
        {
          "field": "slug",
          "type": "string",
          "meta": {
            "interface": "input",
            "required": true,
            "width": "half",
            "note": "URL-friendly version of the title. Use lowercase letters, numbers, and hyphens only. Example: 'about-us' creates the URL '/about-us'. Leave blank to auto-generate from title.",
            "translations": [
              {
                "language": "en-US",
                "translation": "URL Slug"
              }
            ]
          },
          "schema": {
            "is_nullable": false,
            "is_unique": true
          }
        },
        {
          "field": "status",
          "type": "string",
          "meta": {
            "interface": "select-dropdown",
            "width": "half",
            "note": "Draft: Not visible on website | Published: Visible to everyone | Archived: Hidden but kept for reference",
            "options": {
              "choices": [
                {
                  "text": "Draft",
                  "value": "draft",
                  "color": "var(--theme--foreground)"
                },
                {
                  "text": "Published",
                  "value": "published",
                  "color": "var(--theme--primary)"
                },
                {
                  "text": "Archived",
                  "value": "archived",
                  "color": "var(--theme--warning)"
                }
              ]
            },
            "display": "labels",
            "display_options": {
              "showAsDot": true
            }
          },
          "schema": {
            "default_value": "draft",
            "is_nullable": false
          }
        },
        {
          "field": "seo_title",
          "type": "string",
          "meta": {
            "interface": "input",
            "width": "half",
            "note": "SEO title for search engines (50-60 characters recommended). If left empty, the page title will be used.",
            "translations": [
              {
                "language": "en-US",
                "translation": "SEO Title"
              }
            ]
          },
          "schema": {}
        },
        {
          "field": "seo_description",
          "type": "text",
          "meta": {
            "interface": "input-multiline",
            "width": "half",
            "note": "SEO description that appears in search results (150-160 characters recommended). Write a compelling summary that encourages clicks.",
            "translations": [
              {
                "language": "en-US",
                "translation": "SEO Description"
              }
            ]
          },
          "schema": {}
        },
        {
          "field": "sort",
          "type": "integer",
          "meta": {
            "interface": "input",
            "hidden": true
          },
          "schema": {}
        },
        {
          "field": "user_created",
          "type": "uuid",
          "meta": {
            "special": ["user-created"],
            "interface": "select-dropdown-m2o",
            "readonly": true,
            "hidden": true,
            "width": "half"
          },
          "schema": {}
        },
        {
          "field": "date_created",
          "type": "timestamp",
          "meta": {
            "special": ["date-created"],
            "interface": "datetime",
            "readonly": true,
            "hidden": true,
            "width": "half"
          },
          "schema": {}
        },
        {
          "field": "user_updated",
          "type": "uuid",
          "meta": {
            "special": ["user-updated"],
            "interface": "select-dropdown-m2o",
            "readonly": true,
            "hidden": true,
            "width": "half"
          },
          "schema": {}
        },
        {
          "field": "date_updated",
          "type": "timestamp",
          "meta": {
            "special": ["date-updated"],
            "interface": "datetime",
            "readonly": true,
            "hidden": true,
            "width": "half"
          },
          "schema": {}
        }
      ]
