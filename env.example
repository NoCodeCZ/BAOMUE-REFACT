# Directus CMS Configuration
# Copy this file to .env.local and fill in your values

# Required: Directus Instance URL
# Local: http://localhost:8055
# Production: https://your-directus-instance.com
NEXT_PUBLIC_DIRECTUS_URL=http://localhost:8055

# Required: Directus Static Token
# Create in Directus: Admin → Settings → Access Tokens → New
# - Name: anything (e.g., "Production Frontend")
# - Token: copy this value
# - Expires: Leave blank (never expires)
DIRECTUS_STATIC_TOKEN=your-static-token-here

# Optional: Site URL (for SEO, sitemap, etc.)
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Optional: Placeholder Image UUID (for fallback images)
# Upload a placeholder image to Directus and use its UUID
DIRECTUS_PLACEHOLDER_IMAGE_ID=

# Optional: Analytics - Google Tag Manager
NEXT_PUBLIC_GTM_ID=

# Optional: Analytics - Google Ads Conversion
NEXT_PUBLIC_GADS_CONVERSION_ID=
NEXT_PUBLIC_GADS_CONVERSION_LABEL=

# Optional: Analytics - Meta Pixel
NEXT_PUBLIC_META_PIXEL_ID=

# Optional: Webhook Revalidation Secret
# Used for /api/revalidate endpoint
REVALIDATION_SECRET=your-secret-key-here



